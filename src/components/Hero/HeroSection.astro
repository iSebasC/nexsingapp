<section class="relative overflow-hidden">
  <!-- Grid principal -->
  <div
    class="max-w-7xl mx-auto px-6 lg:px-8 grid grid-cols-1 md:grid-cols-2 items-center min-h-[calc(100vh-80px)]"
  >
    <div class="relative z-10">
      <img
        src="/hero/vector.png"
        alt="Decoración vector"
        class="absolute -top-12 left-0 w-16 h-16 object-contain animate-float"
        />

      <!-- Texto -->
      <div class="relative z-10 pt-8">
        <h1
          class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-[#020D3B] leading-tight"
        >
          Diseño + Código <br /> Sin Intermediarios
        </h1>
        <!-- resto igual -->
      </div>

      <p class="mt-4 text-[#2B2B2B] max-w-md">
        Somos un pequeño equipo freelance que convierte ideas en experiencias
        digitales. Trabajamos directo con vos, sin vueltas.
      </p>

      <a
        href="#contacto"
        class="inline-block mt-6 px-6 py-3 bg-[#2563eb] text-white font-semibold rounded-md hover:bg-blue-600 transition"
      >
        Hablemos
      </a>
    </div>

    <!-- Columna derecha: imágenes + decoraciones -->
    <div class="relative mt-12 md:mt-0 justify-end items-center hidden md:flex">
      <!-- Imágenes con decoraciones -->
      <div class="relative flex justify-end items-center">
        <!-- Flecha -->
        <img
          src="/hero/vector_flecha.png"
          alt="Flecha"
          class="absolute left-[-64px] top-[60px] w-[181.82px] h-[158.03px] object-contain z-10"
        />

        <!-- Contenedor horizontal -->
        <div class="flex items-end gap-6">
          <!-- img1 a la izquierda -->
          <div
            class="relative overflow-hidden shadow-lg w-[196.8px] h-[246px] rounded-[50px] animate-slide-in"
          >
            <img
              src="/hero/img1.jpg"
              alt="Oficina"
              class="w-full h-full object-cover"
            />
          </div>

          <!-- img2 a la derecha -->
          <div
            class="overflow-hidden shadow-lg w-[309px] h-[588px] animate-slide-in"
            style="border-radius: 40px 0px 0px 0px"
          >
            <img
              src="/hero/img2.jpg"
              alt="Equipo trabajando"
              class="w-full h-full object-cover"
            />
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Botón flecha hacia abajo -->
  <div class="flex justify-center mt-10">
    <div
      class="w-14 h-14 rounded-full bg-blue-600 flex items-center justify-center"
    >
      <img src="/hero/vector_down.png" alt="Scroll down" class="w-4 h-4" />
    </div>
  </div>
</section>

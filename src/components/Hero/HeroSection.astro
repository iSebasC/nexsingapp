<main class="grid lg:grid-cols-2 place-items-center pt-[120px] md:pt-[140px] lg:pt-[160px] xl:pt-[180px] pb-8 md:pb-28 max-w-7xl mx-auto px-6 lg:px-8">
  <!-- Columna izquierda (texto) -->
  <div class="flex flex-col gap-6 max-w-xl">
    <!-- Vector decorativo -->
    <img
      src="/hero/vector.png"
      alt="Decoración"
      class="w-12 h-12 md:w-16 md:h-16 animate-float"
    />

    <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold text-[#020D3B] leading-tight">
      Diseño + Código <br />
      Sin Intermediarios
    </h1>

    <p class="text-[#2B2B2B] text-base md:text-lg">
      Somos un pequeño equipo freelance que convierte ideas en experiencias digitales.
      Trabajamos directo con vos, sin vueltas.
    </p>

    <a
      href="#contacto"
      class="inline-block w-fit mt-2 px-6 py-3 bg-[#2563eb] text-white font-semibold rounded-md hover:bg-blue-600 transition"
    >
      Hablemos
    </a>
  </div>

  <!-- Columna derecha (imágenes) -->
  <div class="relative hidden md:flex justify-end items-end mt-12 md:mt-0">
    <!-- Flecha decorativa -->
    <img
      src="/hero/vector_flecha.png"
      alt="Flecha"
      class="absolute left-[-64px] top-[100px] w-[180px] h-[150px] object-contain z-10"
    />

    <!-- Contenedor horizontal de imágenes -->
    <div class="flex items-end gap-6">
      <!-- Imagen 1 -->
      <div class="relative overflow-hidden shadow-lg w-[196.8px] h-[246px] rounded-[50px] animate-slide-in">
        <img
          src="/hero/img1.jpg"
          alt="Oficina"
          class="w-full h-full object-cover"
        />
      </div>

      <!-- Imagen 2 -->
      <div
        class="overflow-hidden shadow-lg animate-slide-in"
        style="border-radius: 40px 0px 0px 0px;"
      >
        <img
          src="/hero/img2.jpg"
          alt="Equipo trabajando"
          class="w-[240px] lg:w-[300px] xl:w-[309px] h-auto max-h-[520px] object-cover"
        />
      </div>
    </div>
  </div>
</main>

<!-- Botón de scroll -->
<div class="flex justify-center mt-10">
  <a
    href="#servicios"
    class="w-14 h-14 rounded-full bg-blue-600 flex items-center justify-center animate-bounce"
  >
    <img src="/hero/vector_down.png" alt="Scroll down" class="w-3 h-3" />
  </a>
</div>

---
import ServicioCard from "./ServicioCard.tsx";
---

<section id="servicios" class="py-20 px-4 md:px-8 lg:px-20 relative bg-white">
  <div class="flex justify-center mb-12 p-10">
    <div class="relative inline-flex items-center">
      <h2 class="text-3xl md:text-4xl font-bold text-[#020D3B]">Servicios</h2>

      <img
        src="/services/title_vector.png"
        alt="Decoración"
        class="absolute -right-10 top-5 w-16 h-16 md:w-20 md:h-20"
      />
    </div>
  </div>

  <div
    class="mt-14 grid gap-8 sm:grid-cols-2 lg:grid-cols-3 justify-items-center"
  >
    <ServicioCard
      icon="/services/uiux_design.svg"
      title="UI/UX & Diseño de Interfaces"
      features={[
        "Diseño en Figma",
        "Interfaces limpias y funcionales",
        "Enfoque en experiencia de usuario",
      ]}
    />
    <ServicioCard
      icon="/services/web-coding.svg"
      title="Desarrollo Web Frontend"
      features={[
        "Webs estáticas y dinámicas",
        "HTML, CSS, JS, React, etc.",
        "Sitios optimizados y escalables",
      ]}
    />
    <ServicioCard
      icon="/services/dashboard.svg"
      title="Diseño Gráfico, Branding - Marca"
      features={[
        "Identidad de Marca",
        "Branding",
        "Diseño General y Coorporativo",
      ]}
    />
  </div>
</section>
